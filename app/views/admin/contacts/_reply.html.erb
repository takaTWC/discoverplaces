<!-- ボタン部分 -->
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#reply">返信</button>

<!-- モーダル部分 -->
<div class="modal fade" id="reply" tabindex="-1" aria-labelledby="replyLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="replyLabel">返信</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: [:admin, @contact] do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <label for="inputName">返信内容</label>
            <%= f.text_field :reply, autofocus: true, id: "inputName", placeholder: "返信内容を入力してください。", class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "送信", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>