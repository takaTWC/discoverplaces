<h2>管理者ページ</h2>
<h4>ユーザー一覧</h4>
<table class = "table table-bordered">
  <thead>
    <th></th>
    <th>メールアドレス</th>
    <th>ユーザー名</th>
    <th>自己紹介</th>
    <th>アカウント</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to admin_user_path(user) do %>
            <%= image_tag user.image, size: "100x100" %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= user.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4>コメント一覧</h4>
<table class = "table">
  <thead>
    <th>コメント</th>
    <th>投稿者</th>
    <th></th>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= comment.user.name %></td>
        <td><%= link_to "削除", admin_comment_path(comment), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>