<div class="search_form">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <div class="form-group d-flex">
      <%= f.text_field :word, placeholder: "Search", class: "form-control mr-2" %>
      <%= f.submit "検索", class: "btn btn-info rounded-pill text-light" %>
    </div>
  <% end %>
</div>